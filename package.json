{
	"name": "boilerplate",
	"description": "Boilerplate: Node, Webpack, Isomorphic React, Less, Babel, Handlebars",
	"version": "1.1.0",
	"main": "./server.js",
	"author": "Fun Maker",
	"repository": "https://github.com/funmaker/webapp-boilerplate",
	"scripts": {
		"start": "rm -rf build && webpack --config webpack/server.dev.babel.js",
		"start:prod": "cd dist && npm start",
		"build:prod": "mkdir -p dist && npm-run-all build:prod-*",
		"build:prod-server": "webpack --config webpack/server.babel.js",
		"build:prod-client": "webpack --config webpack/client.babel.js",
		"build:prod-static": "cp -r static dist/",
		"build:prod-package": "babel-node webpack/package.babel.js"
	},
	"dependencies": {
		"axios": "^0.19.0",
		"body-parser": "^1.19.0",
		"chalk": "latest",
		"compression": "^1.7.4",
		"cookie-parser": "^1.4.4",
		"detect-node": "^2.0.4",
		"express": "^4.17.1",
		"express-handlebars": "^3.1.0",
		"express-promise-router": "^3.0.3",
		"morgan": "^1.9.1",
		"prop-types": "^15.7.2",
		"query-string": "^6.8.3",
		"react": "^16.10.0",
		"react-dom": "^16.10.0",
		"react-hot-loader": "^4.12.14",
		"react-router": "^5.1.1",
		"react-router-dom": "^5.1.1",
		"source-map-support": "^0.5.13"
	},
	"devDependencies": {
		"@babel/core": "^7.6.2",
		"@babel/node": "^7.6.2",
		"@babel/plugin-proposal-decorators": "^7.6.0",
		"@babel/plugin-proposal-class-properties": "^7.5.5",
		"@babel/plugin-proposal-object-rest-spread": "^7.6.2",
		"@babel/polyfill": "^7.6.0",
		"@babel/preset-env": "^7.6.2",
		"@babel/preset-react": "^7.0.0",
		"@babel/register": "^7.6.2",
		"@hot-loader/react-dom": "^16.9.0",
		"babel-loader": "^8.0.6",
		"css-loader": "^3.2.0",
		"handlebars": "^4.5.3",
		"handlebars-loader": "^1.7.1",
		"mini-css-extract-plugin": "^0.8.0",
		"node-sass": "^4.13.1",
		"npm-run-all": "^4.1.5",
		"sass-loader": "^8.0.0",
		"start-server-webpack-plugin": "^2.2.5",
		"style-loader": "^1.0.0",
		"webpack": "^4.41.0",
		"webpack-cli": "^3.3.9",
		"webpack-dev-middleware": "^3.7.1",
		"webpack-hot-middleware": "^2.25.0",
		"webpack-node-externals": "^1.7.2"
	},
	"port": 3900
}
